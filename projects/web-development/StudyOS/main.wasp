app StudyOS {
  wasp: {
    version: "^0.16.0"
  },

  title: "StudyOS - Multipurpose Study App",

  client: {
    rootComponent: import { App } from "@src/client/App"
  },

  auth: {
    userEntity: User,
    methods: {
      usernameAndPassword: {}
    },
    onAuthFailedRedirectTo: "/"
  }
}


route RootRoute { path: "/", to: MainPage }
page MainPage {
  component: import { MainPage } from "@src/client/pages/MainPage"
}

route EnhancedDashboardRoute { path: "/dashboard", to: EnhancedDashboardPage }
page EnhancedDashboardPage {
  component: import { EnhancedDashboardNew } from "@src/client/pages/EnhancedDashboardNew"
}

route LoginRoute { path: "/login", to: LoginPage }
page LoginPage {
  component: import { LoginPage } from "@src/client/pages/LoginPage"
}

route SignupRoute { path: "/signup", to: SignupPage }
page SignupPage {
  component: import { SignupPage } from "@src/client/pages/SignupPage"
}

route DecksRoute { path: "/decks", to: DecksPage }
page DecksPage {
  component: import { DecksPage } from "@src/client/pages/DecksPage"
}

route DeckCardsRoute { path: "/decks/:deckId/cards", to: DeckCardsPage }
page DeckCardsPage {
  component: import { DeckCardsPage } from "@src/client/pages/DeckCardsPage"
}

route TasksRoute { path: "/tasks", to: TasksPage }
page TasksPage {
  component: import { Tasks } from "@src/client/pages/Tasks"
}

route PomodoroRoute { path: "/pomodoro", to: PomodoroPage }
page PomodoroPage {
  component: import { Pomodoro } from "@src/client/pages/Pomodoro"
}

route GameRoute { path: "/game", to: GamePage }
page GamePage {
  component: import { Game } from "@src/client/pages/Game"
}

