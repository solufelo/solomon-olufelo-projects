// #region Flashcards
// Queries (read operations)
query getDecks {
  fn: import { getDecks } from "@src/server/actions.js",
  entities: [Deck, Card]
}

query getDueCards {
  fn: import { getDueCards } from "@src/server/actions.js",
  entities: [Card, ReviewLog]
}

// Actions (write operations)
action uploadPdfAndGenerateCards {
  fn: import { uploadPdfAndGenerateCards } from "@src/server/actions.js",
  entities: [Deck, Card]
}

action reviewCard {
  fn: import { reviewCard } from "@src/server/actions.js",
  entities: [Card, ReviewLog]
}

action createDeck {
  fn: import { createDeck } from "@src/server/actions.js",
  entities: [Deck]
}

action createCard {
  fn: import { createCard } from "@src/server/actions.js",
  entities: [Card, Deck]
}

action editCard {
  fn: import { editCard } from "@src/server/actions.js",
  entities: [Card]
}

action deleteCard {
  fn: import { deleteCard } from "@src/server/actions.js",
  entities: [Card]
}
// #endregion

// #region Pomodoro
query getPomodoroStats {
  fn: import { getPomodoroStats } from "@src/server/actions.js",
  entities: [PomodoroSession]
}

action startPomodoro {
  fn: import { startPomodoro } from "@src/server/actions.js",
  entities: [PomodoroSession]
}

action endPomodoro {
  fn: import { endPomodoro } from "@src/server/actions.js",
  entities: [PomodoroSession]
}
// #endregion

// #region Tasks
query getTasks {
  fn: import { getTasks } from "@src/server/actions.js",
  entities: [Task]
}

query getTasksDueToday {
  fn: import { getTasksDueToday } from "@src/server/actions.js",
  entities: [Task]
}

action createTask {
  fn: import { createTask } from "@src/server/actions.js",
  entities: [Task]
}

action editTask {
  fn: import { editTask } from "@src/server/actions.js",
  entities: [Task]
}

action deleteTask {
  fn: import { deleteTask } from "@src/server/actions.js",
  entities: [Task]
}
// #endregion

// #region Games
query getGameScores {
  fn: import { getGameScores } from "@src/server/actions.js",
  entities: [GameScore]
}

action recordGameScore {
  fn: import { recordGameScore } from "@src/server/actions.js",
  entities: [GameScore]
}
// #endregion
